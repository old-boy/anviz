{{!-- {{> contentHeader}} --}}
<section class="content">
      <div class="row">
            <div class="col-md-4">
                  <div class="box box-primary">
                  <div class="box-header with-border">
                  <h3 class="box-title">Product Cateogory.1</h3>
                  </div>
                  <!-- /.box-header -->
                  <div class="box-body">
                  <strong style="margin-bottom: 10px;display: inline-block;">Product Cateogory List</strong>
                  <ul class="list-group list-group-unbordered">
                        {{#each cateogories}}
                              <li class="list-group-item cateogory-1-item">
                                    <a data-id="{{id}}"><b style="font-weight: 400;"><i class="fa fa-book margin-r-5"></i>{{cateogoryName}}</b><span class="label label-primar pull-right">3</span></a>
                              </li>
                        {{/each}}
                  </ul>
                  </div>
                  </div>
            </div>

            <div class="col-md-4">
                  <div class="box box-primary">
                  <div class="box-header with-border">
                  <h3 class="box-title">Product Cateogory.2</h3>
                  </div>
                  <!-- /.box-header -->
                  <div class="box-body cateogory-2-body">
                  <strong style="margin-bottom: 10px;display: inline-block;"><i class="fa fa-book margin-r-5"></i>Biometric</strong>
                  <ul class="list-group list-group-unbordered">
                        <li class="list-group-item cateogory-2-item">
                        <b style="font-weight: 400;">Fingerprint</b> <a class="pull-right">5</a>
                        </li>
                        <li class="list-group-item cateogory-2-item">
                        <b style="font-weight: 400;">Facial</b> <a class="pull-right">5</a>
                        </li>
                        <li class="list-group-item cateogory-2-item">
                        <b style="font-weight: 400;">Iris</b> <a class="pull-right">4</a>
                        </li>
                  </ul>
                  </div>
                  </div>
            </div>

            <div class="col-md-4">
                  <div class="box box-primary">
                  <div class="box-header with-border">
                  <h3 class="box-title">Product Cateogory.3</h3>
                  </div>
                  <!-- /.box-header -->
                  <div class="box-body">
                  <strong style="margin-bottom: 10px;display: inline-block;"><i class="fa fa-book margin-r-5"></i>Fingerprint</strong>
                  <ul class="list-group list-group-unbordered">
                        <li class="list-group-item">
                        <b style="font-weight: 400;">Standalone Access Control</b> <a class="pull-right">1,322</a>
                        </li>
                        <li class="list-group-item">
                        <b style="font-weight: 400;">Standalone Time Attendance</b> <a class="pull-right">543</a>
                        </li>
                        <li class="list-group-item">
                        <b style="font-weight: 400;">Smart Lock</b> <a class="pull-right">13,287</a>
                        </li>
                        <li class="list-group-item">
                        <b style="font-weight: 400;">Modules</b> <a class="pull-right">13,287</a>
                        </li>
                        <li class="list-group-item">
                        <b style="font-weight: 400;">SDK</b> <a class="pull-right">13,287</a>
                        </li>
                  </ul>
                  </div>
                  </div>
            </div>

            <div class="col-md-12">
                  <div class="nav-tabs-custom">
                  <ul class="nav nav-tabs">
                  <li class="active"><a href="#cateogoryOne" data-toggle="tab">Cateogory.1</a></li>
                  <li><a href="#cateogoryTwo" data-toggle="tab">Cateogory.2</a></li>
                  <li><a href="#cateogoryThree" data-toggle="tab">Cateogory.3</a></li>
                  </ul>
                  <div class="tab-content">
                        <div class="active tab-pane" id="cateogoryOne">
                        <form class="form-horizontal" action="/product/cateogory/add" method="POST">
                              <div class="form-group">
                                    <label for="cateogoryOneName" class="col-sm-2 control-label">Cateogory.1 Name</label>
                                    <div class="col-sm-10">
                                          <input type="text" class="form-control" id="cateogoryOneName" placeholder="Cateogory.1 Name" name="cateogoryOneName">
                                    </div>
                              </div>
                              <div class="form-group">
                                    <label for="cateogoryOneDes" class="col-sm-2 control-label">Cateogory.1 Des</label>
                                    <div class="col-sm-10">
                                          <input type="text" class="form-control" id="cateogoryOneDes" placeholder="Cateogory.1 Des" name="cateogoryOneDes">
                                    </div>
                              </div>
                              <div class="form-group">
                                    <div class="col-sm-offset-2 col-sm-10">
                                          <button type="submit" class="btn btn-danger">Save</button>
                                    </div>
                              </div>
                        </form>
                        </div>
                        <div class="tab-pane" id="cateogoryTwo">
                        <form class="form-horizontal" action="/product/cateogory/add/{{cateogories.id}}" method="POST">
                              <div class="form-group">
                                    <label class="col-sm-2 control-label">Cateogory.1 Name</label>
                                    <div class="col-sm-10">
                                          <select class="form-control select2" style="width: 100%;">
                                                {{#each cateogories}}
                                                      <option value="{{id}}">{{cateogoryName}}</option>
                                                {{/each}}
                                          </select>
                                    </div>    
                              </div>
                              <div class="form-group">
                                    <label for="inputName" class="col-sm-2 control-label">Cateogory.2 Name</label>
                                    <div class="col-sm-10">
                                          <input type="text" class="form-control" id="inputName" placeholder="Cateogory.2 Name" name="cateogoryTwoName">
                                    </div>
                              </div>
                              <div class="form-group">
                                    <div class="col-sm-offset-2 col-sm-10">
                                          <button type="submit" class="btn btn-danger">Save</button>
                                    </div>
                              </div>
                        </form>
                        </div>
                        <div class="tab-pane" id="cateogoryThree">
                        <form class="form-horizontal">
                               <div class="form-group">
                                    <label class="col-sm-2 control-label">Cateogory.2 Name</label>
                                    <div class="col-sm-10">
                                          <select class="form-control select2" style="width: 100%;">
                                                <option selected="selected">Fingerprint</option>
                                                <option>Facial</option>
                                                <option>Iris</option>
                                          </select>
                                    </div>    
                              </div>
                              <div class="form-group">
                                    <label for="inputName" class="col-sm-2 control-label">Cateogory.3 Name</label>
                                    <div class="col-sm-10">
                                          <input type="text" class="form-control" id="inputName" placeholder="Cateogory.3 Name" name="cateogoryThreeName">
                                    </div>
                              </div>
                              <div class="form-group">
                                    <div class="col-sm-offset-2 col-sm-10">
                                    <button type="submit" class="btn btn-danger">Save</button>
                                    </div>
                              </div>
                        </form>
                        </div>
                  </div>
                  </div>
            </div>
      </div>
</section>